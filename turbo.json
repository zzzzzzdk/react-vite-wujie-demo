{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    },
    "apps/main-app:build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "apps/main-app:dev": {
      "cache": false
    },
    "apps/sub-app:build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "apps/sub-app:dev": {
      "cache": false
    }
  }
}